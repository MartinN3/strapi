{
  "kind": "singleType",
  "connection": "default",
  "collectionName": "top_page_messages",
  "info": {
    "name": "Top Page Message"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Show": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "info",
        "warning",
        "danger"
      ],
      "default": "info"
    },
    "Content": {
      "type": "richtext",
      "required": true
    }
  }
}
